@model ShoppingCartVM
@using Microsoft.Extensions.Options
@using techZone.Entities.ViewModel
@inject IOptions<techZone.Utilities.StripeSettings> Stripe
@{
    ViewData["Title"] = "Summary";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart Summary</title>

    <link rel="stylesheet" href="~/css/summary.css" />
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body class="bg-light">
    <form asp-action="Summary" method="post">
        @Html.AntiForgeryToken()

        <div class="container py-5">
            <div class="row g-4">

                <!-- Billing Address -->
                <div class="col-lg-6">
                    <div class="card shadow-sm rounded-3">
                        <div class="card-header bg-primary text-white h5">Billing Address</div>
                        <div class="card-body">

                            <div class="mb-3">
                                <label class="text-muted">Name</label>
                                <input asp-for="OrderHeader.Name" class="form-control" readonly />
                            </div>

                            <div class="mb-3">
                                <label class="text-muted">Email</label>
                                <input asp-for="OrderHeader.Email" class="form-control" readonly />
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted">City</label>
                                    <input asp-for="OrderHeader.City" class="form-control" readonly />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted">Phone</label>
                                    <input asp-for="OrderHeader.Phone" class="form-control" readonly />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="text-muted">Address</label>
                                <input asp-for="OrderHeader.Address" class="form-control" readonly />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Cart Summary -->
                <div class="col-lg-6">
                    <div class="card shadow-sm rounded-3">
                        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                            <span class="h5 mb-0">Cart Summary</span>
                            <a asp-action="Index" asp-controller="Cart" class="text-white small">Edit</a>
                        </div>
                        <div class="card-body">

                            @foreach (var item in Model.CartList)
                            {
                                <div class="d-flex align-items-center border-bottom pb-3 mb-3">
                                    <img src="~/images/products/@item.Product.Image"
                                         alt="@item.Product.Name"
                                         width="80" height="80"
                                         class="rounded shadow-sm">
                                    <div class="ms-3">
                                        <h6 class="mb-1">@item.Product.Name</h6>
                                        <small class="text-muted">@item.Product.Description</small><br />
                                        <span class="badge bg-secondary">x @item.Count</span>
                                    </div>
                                    <div class="ms-auto fw-bold text-primary">
                                        @item.Product.Price.ToString("C")
                                    </div>
                                </div>
                            }

                            <!-- Total -->
                            <div class="d-flex align-items-center py-2">
                                <div class="h5 mb-0">Total</div>
                                <div class="ms-auto d-flex">
                                    <div class="text-primary text-uppercase pe-2">USD</div>
                                    <div class="fw-bold h5 mb-0">@Model.OrderHeader.TotalPrice.ToString("C")</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Shopping
                        </a>
                        <button type="submit" class="btn btn-success px-4">
                            <i class="fas fa-check-circle"></i> Place Order
                        </button>
                    </div>
                    <div class="text-muted small pt-3 text-center">
                        <span class="fas fa-lock"></span> Your information is safe
                    </div>
                </div>

            </div>
        </div>
    </form>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
