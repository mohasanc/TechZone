@using techZone.Entities.ViewModel
@model ProductViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create Product";
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Create Product";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <!-- Card Header -->
        <div class="card-header bg-primary text-white text-center fw-bold fs-5">
            <i class="bi bi-plus-circle me-2"></i> @ViewBag.CardTitle
        </div>

        <!-- Card Body -->
        <div class="card-body p-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <!-- Product Name -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold"></label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Price -->
                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-semibold"></label>
                    <input asp-for="Price" class="form-control" placeholder="Enter price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <!-- Image -->
                <div class="mb-3">
                    <label asp-for="Image" class="form-label fw-semibold"></label>
                    <input type="file" name="file" id="file" class="form-control" />
                </div>

                <!-- Category -->
                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label fw-semibold"></label>
                    <select asp-for="CategoryId" asp-items="Model.CategoryList" class="form-select">
                        <option disabled selected>-- Select Category --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" asp-controller="Product" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}