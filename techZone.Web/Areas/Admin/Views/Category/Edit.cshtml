@using techZone.Entities.Models
@model Category

@{
    ViewData["Title"] = "Edit Category";
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "Edit Category";
}

<div class="d-flex justify-content-center">
    <div class="card shadow-lg p-4 col-md-6">
        <h3 class="mb-4 text-primary text-center">
            <i class="bi bi-pencil-square"></i> Edit: @Model.Name
        </h3>

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <input asp-for="CategoryId" type="hidden" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-semibold"></label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mt-4 text-center">
                <button type="submit" class="btn btn-success me-2">
                    <i class="bi bi-check-circle"></i> Save
                </button>
                <a asp-action="Index" asp-controller="Category" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
