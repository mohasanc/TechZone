@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "View Categories";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">@ViewBag.CardTitle</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Category
        </a>
    </div>

    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            <table class="table table-striped table-bordered table-hover align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Created At</th>
                        <th style="width: 180px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.CreatedAt.ToString("yyyy-MM-dd hh:mm tt")</td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-success btn-sm">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@item.CategoryId" method="post"
                                          onsubmit="return confirm('Are you sure you want to delete this category?');">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
