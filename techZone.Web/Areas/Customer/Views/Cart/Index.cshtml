@using techZone.Entities.ViewModel
@model ShoppingCartVM

@{
    ViewData["Title"] = "Shopping Cart";
}

<!DOCTYPE html>
<html>
<head>
    <title>Shopping Cart</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" asp-href-include="~/shoppingcart/style.css" />
</head>
<body>
    <main class="page">
        <section class="shopping-cart dark">
            <div class="container">
                <div class="block-heading">
                    <h2>Shopping Cart</h2>
                </div>
                <div class="content">
                    <div class="row">
                        <!-- Cart Items -->
                        <div class="col-md-12 col-lg-8">
                            <div class="items">
                                @foreach (var item in Model.CartList)
                                {
                                    <div class="product">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <img class="img-fluid mx-auto d-block image" src="~/images/products/@item.Product.Image" alt="@item.Product.Name">
                                            </div>
                                            <div class="col-md-8">
                                                <div class="info">
                                                    <div class="row">
                                                        <!-- Product Name & Description -->
                                                        <div class="col-md-5 product-name">
                                                            <div class="product-name">
                                                                <a href="#">@item.Product.Name</a>
                                                                <div class="product-info">
                                                                    <div>Description: <span class="value">@item.Product.Description</span></div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <!-- Quantity Controls -->
                                                        <div class="col-md-4 quantity">
                                                            <label for="quantity">Quantity:</label>
                                                            <div class="btn-group" role="group">
                                                                <a class="btn btn-primary" asp-action="Plus" asp-route-cartId="@item.Id">+</a>
                                                                <span style="margin:5px">@item.Count</span>
                                                                <a class="btn btn-primary" asp-action="Minus" asp-route-cartId="@item.Id">-</a>
                                                            </div>
                                                        </div>

                                                        <!-- Price -->
                                                        <!-- Remove Button -->
                                                        <div class="col-md-3 price text-center">
                                                            <span class="d-block mb-2">@item.Product.Price.ToString("C")</span>
                                                            <a class="btn btn-outline-danger btn-sm" asp-action="Remove" asp-route-cartId="@item.Id" title="Remove item">
                                                                <i class="fas fa-trash-alt"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Summary Section -->
                        <div class="col-md-12 col-lg-4">
                            <div class="summary">
                                <h3>Summary</h3>
                                <div class="summary-item">
                                    <span class="text">Total</span>
                                    <span class="price">@Model.TotalPrice.ToString("C")</span>
                                </div>
                                <a asp-action="Summary" asp-controller="Cart" class="btn btn-primary btn-lg btn-block">
                                    Checkout
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
