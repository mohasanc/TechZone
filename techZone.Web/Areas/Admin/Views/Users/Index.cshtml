@using techZone.Entities.Models
@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Users Management";
    ViewBag.PageTitle = "Users Management";
    ViewBag.CardTitle = "View Users";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">@ViewBag.CardTitle</h2>
        <a href="/Identity/Account/Register" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create User
        </a>
    </div>

    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            <table class="table table-striped table-bordered table-hover align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>Phone</th>
                        <th style="width: 180px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>@item.Address</td>
                            <td>@item.City</td>
                            <td>@item.PhoneNumber</td>
                            <td class="d-flex">
                                @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                                {
                                    <a asp-action="LockUnlock" class="btn btn-success btn-sm me-2" asp-route-id="@item.Id"> <i class="fas fa-lock-open"></i> </a>
                                }
                                else
                                {

                                    <a asp-action="LockUnlock" class="btn btn-danger btn-sm me-2" asp-route-id="@item.Id"> <i class="fas fa-lock"></i> </a>
                                }
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');"> <button type="submit" class="btn btn-danger btn-sm" title="Delete"> <i class="fas fa-trash"></i> </button> </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>